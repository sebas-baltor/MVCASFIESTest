@model IEnumerable<MVCASFIES.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <h3>Buscar por Correo</h3>
    @using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        <p>Correo: <input type="text" name="Correo" placeholder="busca al cliente por correo"/></p>
        <input type="submit" value="Buscar" class="btn btn-primary" />
    }
    @using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        <input type="submit" value="Buscar Todo" class="btn btn-primary" />
    }
